@model MasterPieceMVC.Models.Service

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    dt{
        margin-top:2rem;
    }
</style>
<div class="container-fluid pt-4 px-4">
    <h2>Details</h2>

    <div>
        <h4>Service</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Service_Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Service_Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Service_Photo)
            </dt>

            <dd>
