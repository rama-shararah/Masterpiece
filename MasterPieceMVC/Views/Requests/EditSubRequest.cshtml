@model MasterPieceMVC.Models.Request

@{
    ViewBag.Title = "EditSubRequest";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

    <meta charset="utf-8" />
   

<br />

@using (Html.BeginForm("EditSubRequest", "Requests", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal container" style="text-align:right;">
    <h4>تعديل حالة الطلب</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Request_Id)

<div class="form-group">
    
    <div class="col-md-10">
        @Html.HiddenFor(model => model.Request_Date, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Request_Date, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
       
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Lantitude, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Lantitude, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Longtitude, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Longtitude, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
      
        <div class="col-md-10">
            @Html.HiddenFor(model => model.userId)
            @Html.ValidationMessageFor(model => model.userId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Subscriper_Id)
            @Html.ValidationMessageFor(model => model.Subscriper_Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="text-align:right;">

        <div class="col-md-10">
            <div class="checkbox">
                @*@Html.EditorFor(model => model.Accept, new { htmlAttributes = new { @class = "form-control" } })*@
                <select class="form-control" dir="rtl" name="Accept">
                    <option>غيرمحدد</option>
                    <option value="true">مقبول</option>
                    <option value="false">مرفوض</option>
                </select>
                @Html.ValidationMessageFor(model => model.Accept, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <div class="form-group" style="text-align:right;">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="تعديل" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div class="container" style="text-align:right;">
    @Html.ActionLink("رجوع", "Request")
</div>
<br />
