    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/a8b56cb52b.js" crossorigin="anonymous"></script>
    <style>
        .navbar-collapse {
            flex-grow: 0;
        }

        #logo {
            width: 70%;
        }

        .navbar-nav {
            color: black;
            font-size: 20PX;
            gap: 15px;
        }


        .dropdown-item {
            text-align: right !important;
        }

        .text-reset {
            text-decoration: none;
            text-align: right !important;
        }

        .text-muted {
            color: white !important;
            text-align: right !important;
        }

        .fas {
            color: white !important;
        }

        .fab {
            color: white;
        }

        .mb-4 {
            text-align: right !important;
        }

        @@media only screen and (min-device-width: 0px) and (max-device-width: 480px) {
            #logo {
                width: 40%;
            }
        }
    </style>


</head>
<body>
    <nav class="navbar navbar-expand-lg" style="background-color: #E6E6E6;">
        <div class="container">
            <a class="navbar-brand" href="/Services/HomePage">
                <img id="logo" src="~/pic/log.png" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
              
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Services/HomePage">الصفحة الرئيسية</a>
                    </li>
                    <li class="nav-item">
                        @Html.Partial("_LoginPartial")
                    </li>
                    @if (User.IsInRole("User"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/AspNetUsers/UserProfile"><i style="font-size: 25px;" class="fa-solid fa-circle-user"></i></a>
                        </li>
                    }
                    @{
                        var email = User.Identity.Name;
                        var count = db.Requests.Where(x => x.Subscriper.AspNetUser.Email == email).Where(x => x.Accept == null).Select(x => x.Accept).ToList().Count();
                    }
                    @if (User.IsInRole("ServiceProvider"))
                    {

                        <li class="nav-item">
                            <a class="nav-link" href="/Subscripers/SubProfile"><i style="font-size: 25px;" class="fa-solid fa-circle-user"></i></a>
                        </li>

                        if (count > 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Requests/Request"><i style="font-size: 25px;" class="fa-solid fa-bell"></i><i style="font-size: 10px; color: red; position: absolute;" class="fa-solid fa-circle"></i></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                   <a class="nav-link" href="/Requests/Request"><i style="font-size: 25px;" class="fa-solid fa-bell"></i></a>
                            </li>
                        }

                        //if the sum of unaccepted requests > 0 === with red circle


                    }

                </ul>

            </div>
        </div>
    </nav>
    @RenderBody()
