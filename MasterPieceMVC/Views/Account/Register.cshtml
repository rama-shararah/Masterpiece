@model MasterPieceMVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Account.cshtml";
}


<style>
    ::placeholder {
        text-align: right;
    }

    input {
    }

    .form-control {
        width: 85% !important;
        margin-left: 8%;
    }

    .card-body {
        background-color: white !important;
        border-radius: 7rem;
    }

    #Button1 {
        width: 85%;
    }

    .fw-bold {
        text-decoration: none;
    }

    option {
        text-align: right;
    }

    .p-5 {
        padding: 3rem 3rem 0rem 3rem !important;
    }
</style>
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-light text-black" style="border-radius: 7rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h2 class="fw-bold mb-2 text-uppercase">مستخدم جديد</h2>
                                @Html.ValidationSummary("", new { @class = "text-danger" })

                                <p class="text-black-50 mb-5"></p>

                                <div class="form-outline form-white mb-4">

                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", type = "email", placeholder = "البريد الالكتروني" })
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input type="tel" name="PhoneNumber" id="typeTelX" placeholder="رقم الهاتف" class="form-control form-control-lg" />

                                </div>
                                <div class="form-outline form-white mb-4">
                                    <select name="location" class="form-select form-control">
                                        <option value="الحي الجنوبي">اربد-الحي الجنوبي</option>
                                        <option value="الحي الشرقي">اربد-الحي الشرقي</option>
                                        <option value="الحي الشمالي">اربد-الحي الشمالي</option>
                                        <option value="الحي الغربي">اربد-الحي الغربي</option>
                                    </select>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", placeholder = "كلمة السر" })

                                </div>
                                <div class="form-outline form-white mb-4">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg", placeholder = "تأكيد كلمة السر" })

                                </div>
                                <br />



                                <input id="Button1" type="submit" class="btn btn-outline-primary btn-lg px-5" value="تسجيل" />

                                @*<div class="d-flex justify-content-center text-center mt-4 pt-1">
                                        <a href="#!" class="text-primary"><i class="fab fa-facebook-f fa-lg"></i></a>
                                        <a href="#!" class="text-primary"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                        <a href="#!" class="text-primary"><i class="fab fa-google fa-lg"></i></a>
                                    </div>*@
                                <br />
                                <br />
                                <p class="mb-0">
                                    لديك حساب؟<br />
                                    <a href="/Account/Login" class="text-dark-50 fw-bold">دخول</a>

                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<br />
<br />
<br />
<br />



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
